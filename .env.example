# Core
PORT=8000
HOST=0.0.0.0
RULES_PATH=/etc/guardrail/rules.yaml
POLICY_DEFAULT_INJECTION_ACTION=block

# Backend selection
MODEL_BACKEND=openai  # openai|anthropic|azure|local

# OpenAI
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Local (no key)
LOCAL_MODEL_NAME=llama3:instruct

# Quotas/Rate Limits (optional)
RATE_LIMIT_QPS=10
QUOTA_DAILY_TOKENS=100000

# PDF/DOCX detectors and image hardening (default ON)
PDF_DETECTOR_ENABLED=true
DOCX_DETECTOR_ENABLED=true
IMAGE_SAFE_TRANSFORM_ENABLED=true
