# Provider selection
LLM_PROVIDER=local-echo         # or "openai"
OPENAI_API_KEY=                 # when LLM_PROVIDER=openai
OPENAI_BASE_URL=                # optional override for OpenAI/Azure endpoints

# OpenAI-compat
OAI_COMPAT_MODELS=demo
OAI_COMPAT_EMBED_DIM=1536

# Guardrail policy
POLICY_AUTORELOAD=false
POLICY_RULES_PATH=
AUDIT_ENABLED=true
AUDIT_MAX_TEXT_CHARS=64

# Threat feed
THREAT_FEED_URLS=
THREAT_FEED_ENABLED=false

# Rate limit (legacy adapter; separate from quotas)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=60

# Quotas (per-tenant/bot)
QUOTA_ENABLED=false
QUOTA_MODE=hard          # hard|soft
QUOTA_PER_MINUTE=0
QUOTA_PER_DAY=0

# Models list for /v1/models
# OAI_COMPAT_MODELS=gpt-4o-mini,gpt-4o
