{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Hit Ratio (tenant/method)",
      "id": 1,
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "targets": [
        {
          "expr": "idemp:hit_ratio{tenant=\"$tenant\",method=\"$method\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2,
          "min": 0,
          "max": 1
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Lock Wait p95 (s)",
      "id": 2,
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "targets": [{ "expr": "idemp:lock_wait_p95_seconds", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 2 },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Lock Wait p99 (s)",
      "id": 3,
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "targets": [{ "expr": "idemp:lock_wait_p99_seconds", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 2 },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Conflicts (r/s)",
      "id": 4,
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "targets": [
        {
          "expr": "idemp:conflict_rate_per_s{tenant=\"$tenant\",method=\"$method\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "rps" }, "overrides": [] }
    },
    {
      "type": "row",
      "title": "Traffic & Replays",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Hits vs Misses (r/s)",
      "id": 5,
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": { "defaults": { "unit": "rps" }, "overrides": [] },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "expr": "idemp:hits_per_s{tenant=\"$tenant\",method=\"$method\"}",
          "legendFormat": "hits",
          "refId": "A"
        },
        {
          "expr": "idemp:misses_per_s{tenant=\"$tenant\",method=\"$method\"}",
          "legendFormat": "misses",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Replay Count p95",
      "id": 6,
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 6 },
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "legend": { "showLegend": false } },
      "targets": [
        {
          "expr": "idemp:replay_count_p95{tenant=\"$tenant\",method=\"$method\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "Errors & Top Tenants",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 13 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Backend Error Rate by Phase (global)",
      "id": 7,
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 14 },
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": { "defaults": { "unit": "rps" }, "overrides": [] },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "expr": "idemp:error_rate_per_s",
          "legendFormat": "{{phase}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top 10 Tenants by Low Hit Ratio",
      "id": 8,
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 14 },
      "datasource": "${DS_PROMETHEUS}",
      "options": {
        "showHeader": true,
        "footer": { "show": false },
        "sortBy": [{ "displayName": "value", "desc": false }]
      },
      "targets": [
        {
          "expr": "topk(10, 1 - idemp:hit_ratio)",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "align": "auto" } },
        "overrides": []
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["idempotency", "ops"],
  "templating": {
    "list": [
      {
        "name": "tenant",
        "label": "Tenant",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "includeAll": false,
        "multi": false,
        "query": "label_values(idemp:hits_per_s, tenant)",
        "refresh": 1,
        "sort": 1,
        "current": { "selected": false, "text": "all", "value": "" }
      },
      {
        "name": "method",
        "label": "Method",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "includeAll": false,
        "multi": false,
        "query": "label_values(idemp:hits_per_s, method)",
        "refresh": 1,
        "sort": 1,
        "current": { "selected": false, "text": "POST", "value": "POST" }
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "Idempotency Ops",
  "uid": "idem-ops",
  "version": 1,
  "weekStart": ""
}
