# ==== APP RUNTIME (local dev) ====
API_KEY=change-me-dev-key

# Auth
AUTH_MODE=api_key          # api_key | jwt
JWT_JWKS_URL=
JWT_ISSUER=
JWT_AUDIENCE=
JWT_HS256_SECRET=

# Policy
POLICY_AUTORELOAD=true
# POLICY_RULES_PATH is set by compose (see service env)

# Limits
MAX_PROMPT_CHARS=20000
OUTPUT_MAX_CHARS=20000

# Redaction & Audit
REDACT_SECRETS=true
AUDIT_ENABLED=true
AUDIT_SAMPLE_RATE=0.2
AUDIT_MAX_TEXT_CHARS=200

# Rate limit
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=60
RATE_LIMIT_BACKEND=memory   # memory | redis
REDIS_URL=redis://redis:6379/0

# Metrics / tracing
METRICS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=

# Demo admin UI features
ADMIN_ENABLE_GOLDEN_ONE_CLICK=1
DEMO_DEFAULT_BINDINGS=1

