# ==== APP RUNTIME (local dev) ====
API_KEY=change-me-dev-key

# Policy
POLICY_AUTORELOAD=true
# POLICY_RULES_PATH is set to /etc/guardrail/rules.yaml by compose (see service env)
# Limits
MAX_PROMPT_CHARS=20000
OUTPUT_MAX_CHARS=20000

# Redaction & Audit
REDACT_SECRETS=true
AUDIT_ENABLED=true
AUDIT_SAMPLE_RATE=0.2
AUDIT_MAX_TEXT_CHARS=200

# Rate limit (off by default for dev)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=60

# Metrics & Tracing (optional; safe to leave blank)
METRICS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=
