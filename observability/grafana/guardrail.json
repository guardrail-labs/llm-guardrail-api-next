{
  "title": "Guardrail API â€” Starter",
  "uid": "guardrail-starter",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Req/s",
      "gridPos": {"x":0,"y":0,"w":6,"h":4},
      "targets": [
        {"expr": "sum(rate(guardrail_requests_total[5m]))", "refId": "A"}
      ]
    },
    {
      "type": "piechart",
      "title": "Allow vs Deny (5m)",
      "gridPos": {"x":6,"y":0,"w":6,"h":8},
      "targets": [
        {
          "expr": "sum by (family) (rate(guardrail_decisions_total[5m]))",
          "refId": "A"
        }
      ],
      "options": {"legend": {"displayMode": "table"}}
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (ms) by endpoint",
      "gridPos": {"x":0,"y":4,"w":12,"h":8},
      "targets": [
        {"expr": "1000 * histogram_quantile(0.95, sum by (le, endpoint) (rate(guardrail_latency_seconds_bucket[5m])))", "refId": "A", "legendFormat": "{{endpoint}}"}
      ],
      "fieldConfig": {
        "defaults": {"unit": "ms"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Decisions/s by family",
      "gridPos": {"x":0,"y":12,"w":12,"h":8},
      "targets": [
        {
          "expr": "sum by (family) (rate(guardrail_decisions_total[5m]))",
          "refId": "A",
          "legendFormat": "{{family}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Active Policy Versions (15m)",
      "gridPos": {"x":6,"y":20,"w":6,"h":8},
      "targets": [
        {"expr": "count by (policy_version) (sum_over_time(guardrail_requests_total[15m]) > 0)", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Deny rate by tenant (5m)",
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (tenant) (rate(guardrail_actor_decisions_total{family=\"deny\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{tenant}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top 5 bots by denies (5m)",
      "gridPos": { "x": 0, "y": 36, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(5, sum by (bot) (rate(guardrail_actor_decisions_total{family=\"deny\"}[5m])))",
          "refId": "A"
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "type": "timeseries",
      "title": "5xx rate (req/s)",
      "gridPos": { "x": 0, "y": 44, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(guardrail_http_status_total{status=~\"5..\"}[5m]))",
          "refId": "A",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "429 rate (req/s)",
      "gridPos": { "x": 0, "y": 52, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(guardrail_http_status_total{status=\"429\"}[5m]))",
          "refId": "A",
          "legendFormat": "429"
        }
      ]
    },
    {
      "type": "table",
      "title": "HTTP status breakdown (5m)",
      "gridPos": { "x": 0, "y": 60, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (status) (rate(guardrail_http_status_total[5m]))",
          "refId": "A"
        }
      ],
      "options": { "showHeader": true }
    },
    {
      "type": "piechart",
      "title": "Mode distribution (5m)",
      "gridPos": { "x": 0, "y": 68, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (mode) (rate(guardrail_mode_total[5m]))",
          "refId": "A"
        }
      ],
      "options": { "legend": { "displayMode": "table" } }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "label": "Prometheus",
        "current": {"text": "Prometheus", "value": "Prometheus"}
      }
    ]
  }
}
