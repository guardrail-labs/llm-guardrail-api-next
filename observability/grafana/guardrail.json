{
  "title": "Guardrail API â€” Starter",
  "uid": "guardrail-starter",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Req/s",
      "gridPos": {"x":0,"y":0,"w":6,"h":4},
      "targets": [
        {"expr": "sum(rate(guardrail_requests_total[5m]))", "refId": "A"}
      ]
    },
    {
      "type": "piechart",
      "title": "Allow vs Block (5m)",
      "gridPos": {"x":6,"y":0,"w":6,"h":8},
      "targets": [
        {"expr": "sum by (action) (rate(guardrail_decisions_total[5m]))", "refId": "A"}
      ],
      "options": {"legend": {"displayMode": "table"}}
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (ms) by endpoint",
      "gridPos": {"x":0,"y":4,"w":12,"h":8},
      "targets": [
        {"expr": "1000 * histogram_quantile(0.95, sum by (le, endpoint) (rate(guardrail_latency_seconds_bucket[5m])))", "refId": "A", "legendFormat": "{{endpoint}}"}
      ],
      "fieldConfig": {
        "defaults": {"unit": "ms"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Decisions/s by action",
      "gridPos": {"x":0,"y":12,"w":12,"h":8},
      "targets": [
        {"expr": "sum by (action) (rate(guardrail_decisions_total[5m]))", "refId": "A", "legendFormat": "{{action}}"}
      ]
    },
    {
      "type": "table",
      "title": "Active Policy Versions (15m)",
      "gridPos": {"x":6,"y":20,"w":6,"h":8},
      "targets": [
        {"expr": "count by (policy_version) (sum_over_time(guardrail_requests_total[15m]) > 0)", "refId": "A"}
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "label": "Prometheus",
        "current": {"text": "Prometheus", "value": "Prometheus"}
      }
    ]
  }
}
