{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src"]
}
