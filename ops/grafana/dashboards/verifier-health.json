{
  "title": "Guardrail â€” Verifier Health",
  "uid": "guardrail-verifier-health",
  "tags": ["guardrail", "verifier"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {"from": "now-6h", "to": "now"},
  "timepicker": {"refresh_intervals": ["30s", "1m", "5m"], "time_options": ["6h", "12h", "24h"]},
  "templating": {"list": []},
  "panels": [
    {
      "type": "timeseries",
      "title": "Verifier successes / timeouts / errors",
      "targets": [
        {
          "expr": "sum by (provider,event) (rate(guardrail_verifier_events_total[5m]))",
          "legendFormat": "{{provider}} {{event}}"
        }
      ],
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "Outages (5m sum)",
      "targets": [
        {
          "expr": "sum(increase(guardrail_verifier_events_total{event=\"outage\"}[5m]))",
          "legendFormat": "outages"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 10}
    }
  ]
}
